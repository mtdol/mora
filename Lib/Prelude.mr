--slice :: Array a -> (Int, Int) -> Array a
fn slice a is {
    dec ret, reti, i1, i2;
    i1 <- fst is;
    i2 <- snd is;
    reti <- 0;

    If i1 > i2 || i2 - i1 > length a {
        error $ "Invalid range for slice: [" 
            ++ show i1 ++ " " ++ show i2 ++ ")";
    }
    ret <- Array $ i2 - i1;
    
    While i1 /= i2 {
        ret ! reti <- a ! i1;
        reti  +< 1;
        i1 +< 1;
    }

    return ret;
}

-- zip :: Array a -> Array b -> Array (a,b)
fn zip xs ys {
    dec l <- min (length xs) (length ys);
    dec ret <- Array l;
    dec i <- 0;

    While i /= l {
        ret ! i <- (xs ! i, ys ! i);
        i +< 1;
    }

    return ret;
}

fn foldr f acc xs {
    dec i <- length xs - 1;
    While i /= -1 {
        acc <- f (xs ! i) acc;
        i -< 1;
    }

    return acc;
}

fn foldl f acc xs {
    dec i <- 0;
    While i /= length xs {
        acc <- f (xs ! i) acc;
        i +< 1;
    }

    return acc;
}

fn take n xs {
    n <- min (max n 0) (length xs);
    return slice xs (0,n);
}

fn drop n xs {
    n <- max 0 $ min n $ length xs;
    return slice xs (n,length xs);
}

-- and :: Array Bool -> Bool
fn and xs {
    dec i <- 0;
    While i /= length xs {
        If not $ xs ! i {return False;}
        i +< 1;
    }
    return True;
}

fn or xs {
    dec i <- 0;
    While i /= length xs {
        If xs ! i {return True;}
        i +< 1;
    }
    return False;
}

-- all :: (a -> Bool) -> Array a -> Bool
fn all f xs -> and $ gmap f xs;
fn any f xs -> or $ gmap f xs;

dec sum <- foldl (\x y -> x+y) 0;
dec product <- foldl (\x y -> x*y) 1;

