fn showChar c -> "'" ++ [c] ++ "'";

fn showInt n {
    -- converts the raw number into its char form, 3 -> '3'
    fn convert i -> chr $ i + 48;
    
    -- remember if was negative
    dec sign <- neg n;
    dec lret <- Null;
    dec d <- 0;
    n <- abs n;

    If n = 0 {return "0";}

    While n /= 0 {
        d <- n % 10;
        n /< 10;
        lret <- convert d : lret;
    }
    
    If sign {lret <- '-' : lret;}
    return listToArray lret;
}

fn showString s -> appendAll ["\"", s,"\""];

-- showArray :: (a -> String) -> Array a -> String;
fn showArray f a {
    If length a = 0 {return "[]";}

    -- compute all of the elems of the array
    dec as <- f `gmap` a;
    -- `as2` is a list of strings that will eventually be merged together
    --                             ", "             "[" "]"
    dec as2 <- Array $ length as + (length as - 1) + 1 + 1;
    as2 ! 0 <- "[";
    as2 ! (length as2 - 1) <- "]";

    dec i <- 1;
    dec asi <- 0;
    dec cont <- True;
    While cont && i < length as2 - 1 {
        If asi = length as - 1 {
            as2 ! i <- as ! asi;
            cont <- False;
        } Else {
            as2 ! i <- as ! asi;
            as2 ! (i+1) <- ", ";

            i +< 2;
            asi +< 1;
        }
    }

    -- merge into one string
    return appendAll as2;
}

